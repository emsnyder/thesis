doi = {10.1111/j.1365-2966.2011.19901.x},
eprint = {1109.6004},
file = {:afs/cas.unc.edu/users/e/m/emsnyder/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Smith Castelli et al. - 2012 - Galaxy populations in the Antlia cluster - III. Properties of faint early-type galaxies★.pdf:pdf},
