@article{Boselli2009,
abstract = {We have combined UV to radio centimetric observations of resolved galaxies in the Virgo cluster with multizone, chemo-spectrophotometric models of galaxy evolution especially tailored to take into account the effects of the cluster environment (ram pressure stripping and starvation). This exercise has shown that anemic spirals with truncated radial profiles of the gas component and of the young stellar populations, typical in rich clusters of galaxies, have been perturbed by a recent (˜100 Myr) ram pressure stripping event induced by their interaction with the cluster intergalactic medium. Starvation is not able to reproduce the observed truncated radial profiles. Both ram pressure and starvation induce a decrease of the stellar surface brightness of the perturbed disc, and thus can hardly be invoked to explain the formation of lenticular galaxies inhabiting rich clusters, which are characterised by higher surface brightnesses than early type spirals of similar luminosity. In dwarfs the ram pressure stripping event is so efficient to totally remove their gas thus stopping on short time scales ({\&}lt;2 Gyr) their star formation activity. Low luminosity star forming discs can be transformed in dE galaxies.},
