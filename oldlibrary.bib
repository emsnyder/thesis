file = {:afs/cas.unc.edu/users/e/m/emsnyder/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Power, Robotham - 2016 - Extended Stellar Components of Galaxies {\&} the Nature of Dark Matter.pdf:pdf},
month = {mar},
pages = {10},
title = {{Extended Stellar Components of Galaxies {\&} the Nature of Dark Matter}},
