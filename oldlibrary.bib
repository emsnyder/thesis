title = {{E/S0 GALAXIES ON THE BLUE COLOR-STELLAR MASS SEQUENCE AT z = 0: FADING MERGERS OR FUTURE SPIRALS?}},
url = {http://adsabs.harvard.edu/abs/2009AJ....138..579K},
volume = {138},
