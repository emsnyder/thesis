file = {:afs/cas.unc.edu/users/e/m/emsnyder/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Genel - 2016 - How Environment Affects Galaxy Metallicity through Stripping and Formation History Lessons from the Illustris Simulation.pdf:pdf},
